{
  "git": {
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "commitMessage": "chore(cli): release skild@${version}",
    "tagName": "skild@${version}",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "skild@${version}"
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": [
      "pnpm -C ../.. lint:cli",
      "pnpm typecheck",
      "pnpm build"
    ],
    "after:bump": [
      "pnpm typecheck",
      "pnpm build"
    ]
  }
}
