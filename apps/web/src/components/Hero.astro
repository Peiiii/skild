<section class="max-w-6xl mx-auto px-6 pt-2 pb-4 text-center reveal min-h-[85vh] flex flex-col justify-center border-b border-brand-forest/5">
    <!-- Hero Content -->
    <h1
        class="text-4xl md:text-5xl lg:text-7xl font-serif font-bold tracking-tight mb-4 leading-[1.1] text-brand-forest"
    >
        The <span class="text-brand-eco italic underline decoration-brand-eco/30">npm</span> for<br class="md:hidden" />
        AI Agent Skills.
    </h1>

    <p
        class="text-base md:text-lg lg:text-xl text-brand-forest/70 max-w-3xl mx-auto mb-6 leading-relaxed font-medium"
    >
        The unified package manager for AI Agent Skills.<br class="hidden md:inline" />
        One command to install, manage, push, and share capabilities across all major tools.
    </p>

    <!-- Quick Install -->
    <div class="flex items-center justify-center gap-3 mb-8">
        <div class="bg-[#0A0A08] rounded-xl px-6 py-3 font-mono text-sm md:text-base text-white flex items-center gap-3 shadow-lg">
            <span class="text-brand-eco/60">$</span>
            <code id="npm-install-cmd">npm i -g skild</code>
            <button id="hero-copy-btn" class="opacity-40 hover:opacity-100 transition-opacity p-1 ml-2">
                <svg id="hero-copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
                <svg id="hero-check-icon" class="hidden" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
            </button>
        </div>
    </div>

    <!-- CTA Buttons -->
    <div
        class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-10"
    >
        <a
            href="https://github.com/Peiiii/skild"
            target="_blank"
            class="group w-full sm:w-auto px-8 py-3.5 bg-brand-forest text-white font-bold rounded-full hover:bg-brand-eco transition-all hover:scale-[1.05] active:scale-95 flex items-center justify-center gap-2.5 shadow-xl shadow-brand-forest/20 text-sm md:text-base"
        >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="opacity-70 group-hover:opacity-100 transition-opacity">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
            Get Started
        </a>
        <a
            href="https://hub.skild.sh"
            target="_blank"
            class="group w-full sm:w-auto px-8 py-3.5 bg-white text-brand-forest border border-brand-forest/10 font-bold rounded-full hover:bg-brand-forest hover:text-white transition-all active:scale-95 flex items-center justify-center gap-2.5 shadow-sm text-sm md:text-base"
        >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="opacity-50 group-hover:opacity-100 transition-opacity">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
            </svg>
            Explore Skills
        </a>
    </div>

    <!-- Supported Platforms -->
    <div class="mb-12 reveal">
        <p class="text-[10px] font-black uppercase tracking-[0.3em] text-brand-forest/30 mb-6">Supported Platforms</p>
        <div class="flex flex-wrap items-center justify-center gap-x-8 gap-y-4 opacity-40 grayscale hover:grayscale-0 transition-all duration-700">
            <span class="text-sm font-bold tracking-widest">CLAUDE</span>
            <span class="text-sm font-bold tracking-widest">CURSOR</span>
            <span class="text-sm font-bold tracking-widest">WINDSURF</span>
            <span class="text-sm font-bold tracking-widest">OPENCODE</span>
            <span class="text-sm font-bold tracking-widest">COPILOT</span>
            <span class="text-sm font-bold tracking-widest">ANTIGRAVITY</span>
        </div>
    </div>

    <!-- Terminal Demo -->
    <div class="mb-10 transform transition-transform duration-500 rounded-2xl overflow-hidden relative">
        <slot name="terminal" />
    </div>

    <!-- Scroll Indicator (Floating Icon Only, Static) -->
    <a
        href="#features"
        class="absolute bottom-6 left-1/2 -translate-x-1/2 w-10 h-10 flex items-center justify-center bg-[#F9F9F2]/60 backdrop-blur-md border border-brand-forest/10 rounded-full text-brand-forest/40 hover:text-brand-forest hover:border-brand-forest/20 hover:bg-[#F9F9F2] transition-all z-20 shadow-sm"
    >
        <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="3"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="M7 13l5 5 5-5M7 6l5 5 5-5"></path>
        </svg>
    </a>


</section>

<script>
    const heroCopyBtn = document.getElementById('hero-copy-btn');
    const npmInstallCmd = document.getElementById('npm-install-cmd');
    const heroCopyIcon = document.getElementById('hero-copy-icon');
    const heroCheckIcon = document.getElementById('hero-check-icon');
    
    if (heroCopyBtn && npmInstallCmd && heroCopyIcon && heroCheckIcon) {
        heroCopyBtn.addEventListener('click', async () => {
            try {
                await navigator.clipboard.writeText(npmInstallCmd.textContent || '');
                heroCopyIcon.classList.add('hidden');
                heroCheckIcon.classList.remove('hidden');
                setTimeout(() => {
                    heroCopyIcon.classList.remove('hidden');
                    heroCheckIcon.classList.add('hidden');
                }, 2000);
            } catch (err) {
                console.error('Failed to copy:', err);
            }
        });
    }
</script>
