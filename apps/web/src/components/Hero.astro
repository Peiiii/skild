<section class="max-w-5xl mx-auto px-6 text-center reveal">
    <div
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 mb-8"
    >
        <span class="relative flex h-2 w-2">
            <span
                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"
            ></span>
            <span
                class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"
            ></span>
