<section
    id="how-it-works"
    class="max-w-4xl mx-auto px-6 py-24 border-t border-white/5"
>
    <div class="text-center mb-12 reveal">
        <h2 class="text-3xl md:text-4xl font-black tracking-tight mb-4">
            Get skilled in <span class="text-gradient">30 seconds</span>
        </h2>
    </div>

    <div class="reveal">
        <div
            class="glass rounded-2xl p-6 md:p-8 border border-white/10 font-mono text-sm md:text-base space-y-4"
        >
            <!-- Step 1 -->
            <div class="flex items-start gap-4">
                <span
                    class="text-indigo-400/50 text-xs font-bold shrink-0 mt-0.5"
                    >①</span
                >
                <div>
                    <span class="text-white/40"># Install CLI</span>
                    <div class="text-indigo-300 mt-1">npm install -g skild</div>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="flex items-start gap-4">
                <span
                    class="text-indigo-400/50 text-xs font-bold shrink-0 mt-0.5"
                    >②</span
                >
                <div>
                    <span class="text-white/40"># Install any skill</span>
                    <div class="text-indigo-300 mt-1">
                        skild install @publisher/skill
                    </div>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="flex items-start gap-4">
                <span
                    class="text-emerald-400/50 text-xs font-bold shrink-0 mt-0.5"
                    >③</span
                >
                <div>
                    <span class="text-emerald-400 flex items-center gap-2">
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        Done. Your agent is equipped.
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
