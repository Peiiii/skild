<section
    id="how-it-works"
    class="max-w-5xl mx-auto px-6 py-32"
>
    <div class="text-center mb-20 reveal">
        <h2 class="text-4xl md:text-5xl font-serif font-bold text-brand-forest mb-6">
            Get skilled in <span class="italic text-brand-eco">30 seconds</span>
        </h2>
        <p class="text-brand-forest/60 max-w-xl mx-auto text-lg">Equipping your agents is as simple as running a single command. Built for speed, scale, and trust.</p>
    </div>

    <div class="grid md:grid-cols-3 gap-12 reveal">
        <!-- Step 1 -->
        <div class="space-y-6">
            <div class="w-12 h-12 rounded-full bg-brand-eco/10 flex items-center justify-center text-brand-forest font-serif font-bold text-xl">1</div>
            <div>
                <h4 class="text-xl font-bold text-brand-forest mb-3">Install the CLI</h4>
                <p class="text-brand-forest/50 text-sm leading-relaxed mb-4">Start by installing the skild command-line interface globally via npm.</p>
                <div class="bg-brand-forest/5 rounded-2xl p-4 font-mono text-[13px] text-brand-forest border border-brand-forest/5 flex items-center justify-between">
                    <code id="install-cmd">npm i -g skild</code>
                    <button id="copy-btn" class="opacity-30 hover:opacity-100 transition-opacity p-1">
                        <svg id="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
                        <svg id="check-icon" class="hidden" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 2 -->
        <div class="space-y-6">
            <div class="w-12 h-12 rounded-full bg-brand-eco/10 flex items-center justify-center text-brand-forest font-serif font-bold text-xl">2</div>
            <div>
                <h4 class="text-xl font-bold text-brand-forest mb-3">Equip Core Skills</h4>
                <p class="text-brand-forest/50 text-sm leading-relaxed mb-4">Install official skill packs or community favorite tools instantly.</p>
                <div class="bg-brand-forest/5 rounded-2xl p-4 font-mono text-[13px] text-brand-forest border border-brand-forest/5">
                    <code>skild install anthropics/skills</code>
                </div>
            </div>
        </div>

        <!-- Step 3 -->
        <div class="space-y-6">
            <div class="w-12 h-12 rounded-full bg-brand-eco/10 flex items-center justify-center text-brand-forest font-serif font-bold text-xl">3</div>
            <div>
                <h4 class="text-xl font-bold text-brand-forest mb-3">Stay Updated</h4>
                <p class="text-brand-forest/50 text-sm leading-relaxed mb-4">One command to keep all your agent's capabilities fresh and synced.</p>
                <div class="bg-brand-forest/5 rounded-2xl p-4 font-mono text-[13px] text-brand-forest border border-brand-forest/5">
                    <code>skild update</code>
                </div>
            </div>
        </div>
    </div>

    <!-- Trust Points Bar -->
    <div class="mt-32 pt-16 border-t border-brand-forest/5 grid grid-cols-2 md:grid-cols-4 gap-8 text-center reveal">
        <div>
            <div class="text-2xl font-serif font-bold text-brand-forest mb-1">Versioned</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-brand-forest/30">Traceable & Safe</div>
        </div>
        <div>
            <div class="text-2xl font-serif font-bold text-brand-forest mb-1">Cross-Tool</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-brand-forest/30">Unified Config</div>
        </div>
        <div>
            <div class="text-2xl font-serif font-bold text-brand-forest mb-1">Team Ready</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-brand-forest/30">Shared Environments</div>
        </div>
        <div>
            <div class="text-2xl font-serif font-bold text-brand-forest mb-1">Extensible</div>
            <div class="text-[10px] font-black uppercase tracking-widest text-brand-forest/30">Publish with Ease</div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.getElementById('copy-btn');
    const installCmd = document.getElementById('install-cmd');
    const copyIcon = document.getElementById('copy-icon');
    const checkIcon = document.getElementById('check-icon');
    
    if (copyBtn && installCmd) {
        copyBtn.addEventListener('click', async () => {
            try {
                await navigator.clipboard.writeText(installCmd.textContent || 'npm i -g skild');
                copyIcon?.classList.add('hidden');
                checkIcon?.classList.remove('hidden');
                setTimeout(() => {
                    copyIcon?.classList.remove('hidden');
                    checkIcon?.classList.add('hidden');
                }, 2000);
            } catch (err) {
                console.error('Failed to copy:', err);
            }
        });
    }
});
</script>

