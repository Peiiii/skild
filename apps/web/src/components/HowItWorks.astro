<section
    id="how-it-works"
    class="max-w-7xl mx-auto px-6 py-40 border-t border-white/5"
>
    <div class="text-center mb-20 reveal">
        <h2 class="text-4xl md:text-5xl font-black tracking-tighter mb-6">
            Equip your agents in seconds.
        </h2>
        <p class="text-xl text-white/50 max-w-2xl mx-auto">
            Stop manually managing skill folders. Skild handles the distribution
            and installation so you can focus on building.
        </p>
    </div>

    <div class="grid md:grid-cols-3 gap-10">
        <!-- Step 1 -->
        <div
            class="glass p-10 rounded-3xl border-white/5 flex flex-col items-center text-center reveal"
        >
            <div
                class="w-12 h-12 rounded-full bg-indigo-500/20 text-indigo-400 flex items-center justify-center font-black text-xl mb-8"
            >
                1
            </div>
            <h3 class="text-2xl font-bold mb-4">Install CLI</h3>
            <p class="text-white/40 mb-8">
                Get the package manager on your system.
            </p>
            <code
                class="px-4 py-3 bg-black/40 rounded-xl border border-white/5 text-indigo-300 font-mono text-sm w-full"
                >npm install -g skild</code
            >
        </div>

        <!-- Step 2 -->
        <div
            class="glass p-10 rounded-3xl border-white/5 flex flex-col items-center text-center reveal [transition-delay:100ms]"
        >
            <div
                class="w-12 h-12 rounded-full bg-indigo-500/20 text-indigo-400 flex items-center justify-center font-black text-xl mb-8"
            >
                2
            </div>
            <h3 class="text-2xl font-bold mb-4">Get a Skill</h3>
            <p class="text-white/40 mb-8">
                Pick a target agent and install any skill from GitHub.
            </p>

            <div class="w-full space-y-3">
                <div
                    class="flex p-1 bg-black/20 rounded-xl border border-white/5"
                >
                    <button
                        class="flex-1 py-2 text-xs font-bold rounded-lg transition-all bg-white text-black tab-btn"
                        data-target="claude">Claude</button
                    >
                    <button
                        class="flex-1 py-2 text-xs font-bold rounded-lg transition-all text-white/40 hover:text-white tab-btn"
                        data-target="codex">Codex</button
                    >
                </div>
                <!-- Claude Code -->
                <div id="code-claude" class="code-snippet group relative">
                    <div
                        class="absolute -top-3 left-3 px-2 py-0.5 bg-indigo-500/10 text-[10px] text-indigo-300 border border-indigo-500/20 rounded uppercase font-black"
                    >
                        Default
                    </div>
                    <code
                        class="block px-4 py-3 bg-black/40 rounded-xl border border-white/5 text-indigo-300 font-mono text-xs text-left leading-relaxed"
                    >
                        skild install <br />
                        anthropics/skills/skills/pdf
                    </code>
                </div>
                <!-- Codex -->
                <div id="code-codex" class="code-snippet hidden group relative">
                    <code
                        class="block px-4 py-3 bg-black/40 rounded-xl border border-white/5 text-indigo-300 font-mono text-xs text-left leading-relaxed"
                    >
                        skild install <br />
                        anthropics/skills/skills/pdf <br />
                        <span class="text-emerald-400">--target codex</span>
                    </code>
                </div>
            </div>
        </div>

        <!-- Step 3 -->
        <div
            class="glass p-10 rounded-3xl border-white/5 flex flex-col items-center text-center reveal [transition-delay:200ms]"
        >
            <div
                class="w-12 h-12 rounded-full bg-indigo-500/20 text-indigo-400 flex items-center justify-center font-black text-xl mb-8"
            >
                3
            </div>
            <h3 class="text-2xl font-bold mb-4">Empower Agent</h3>
            <p class="text-white/40 mb-8">
                Your agent automatically finds the skill and follows
                instructions.
            </p>
            <div class="w-full text-left space-y-2 font-mono text-xs">
                <div
                    class="p-4 bg-white/5 rounded-xl border border-white/5 border-l-emerald-500/50 border-l-4"
                >
                    <div class="text-emerald-400 mb-1">âœ“ Ready to use</div>
                    <div class="text-white/30 truncate" id="path-preview">
                        ~/.claude/skills/pdf
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const btns = document.querySelectorAll(".tab-btn");
    const snippets = {
        claude: {
            el: document.getElementById("code-claude"),
            path: "~/.claude/skills/pdf",
        },
        codex: {
            el: document.getElementById("code-codex"),
            path: "~/.codex/skills/pdf",
        },
    };
    const pathPreview = document.getElementById("path-preview");

    btns.forEach((btn) => {
        btn.addEventListener("click", () => {
            const target = btn.getAttribute("data-target");

            // Toggle buttons
            btns.forEach((b) => {
                b.classList.remove("bg-white", "text-black");
                b.classList.add("text-white/40");
            });
            btn.classList.add("bg-white", "text-black");
            btn.classList.remove("text-white/40");

            // Toggle snippets
            (Object.keys(snippets) as Array<keyof typeof snippets>).forEach(
                (key) => {
                    if (key === target) {
                        snippets[key].el?.classList.remove("hidden");
                        if (pathPreview)
                            pathPreview.textContent = snippets[key].path;
                    } else {
                        snippets[key].el?.classList.add("hidden");
                    }
                },
            );
        });
    });
</script>
