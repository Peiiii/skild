---
import TerminalEntry from "./TerminalEntry.astro";
---

<div class="max-w-4xl mx-auto mb-4 px-4">
    <!-- Main Terminal Window -->
    <div
        class="bg-[#0A0A08] rounded-2xl overflow-hidden shadow-[0_32px_64px_-16px_rgba(0,0,0,0.6)] border border-brand-forest/20 text-left font-mono relative group"
    >
        <!-- Top Bar -->
        <div
            class="flex items-center gap-3 px-6 h-12 border-b border-white/5 bg-white/[0.02]"
        >
            <div class="flex gap-2">
                <div class="w-2.5 h-2.5 rounded-full bg-[#FF5F56]/80"></div>
                <div class="w-2.5 h-2.5 rounded-full bg-[#FFBD2E]/80"></div>
                <div class="w-2.5 h-2.5 rounded-full bg-[#27C93F]/80"></div>
            </div>
            <div
                class="flex-1 text-[9px] text-center text-brand-eco/30 font-bold uppercase tracking-[0.4em]"
            >
                Terminal — skild cli
            </div>
            <div class="w-10"></div>
        </div>

        <!-- Terminal Content -->
        <div class="p-8 md:p-10 text-[13px] md:text-[14px] leading-relaxed space-y-5">
            <!-- Animation Group 1: Install -->
            <div class="space-y-2 animate-fade-in">
                <TerminalEntry type="command">skild install anthropics/skills</TerminalEntry>
                <TerminalEntry type="step">Discovered 24 skills from anthropics/skills</TerminalEntry>
                <TerminalEntry type="success">Installed 24 skills → all platforms</TerminalEntry>
            </div>

            <!-- Animation Group 2: List -->
            <div class="space-y-2 pt-4">
                <TerminalEntry type="command">skild list</TerminalEntry>
                <div class="pl-6 text-[12px] space-y-1">
                    <div class="flex gap-4 border-b border-white/5 pb-1 text-white/40">
                        <span class="w-32">Skill</span>
                        <span class="w-16 text-center">Claude</span>
                        <span class="w-16 text-center">Cursor</span>
                        <span class="w-16 text-center">Copilot</span>
                    </div>
                    {[
                        ["prd", "✓", "✓", "✓"],
                        ["project-os", "✓", "✓", "✓"],
                        ["ralph", "✓", "✓", "✓"],
                        ["ui-ux-pro-max", "✓", "✓", "✓"]
                    ].map(([name, ...status]) => (
                        <div class="flex gap-4">
                            <span class="w-32 text-cyan-400">{name}</span>
                            {status.map((s) => (
                                <span class="w-16 text-center text-green-400">{s}</span>
                            ))}
                        </div>
                    ))}
                </div>
            </div>

            <!-- Animation Group 3: Update -->
            <div class="space-y-2 pt-4">
                <TerminalEntry type="command">skild update</TerminalEntry>
                <TerminalEntry type="step">Checking for updates...</TerminalEntry>
                <TerminalEntry type="success">Updated 4 skill(s).</TerminalEntry>
            </div>

            <!-- Cursor -->
            <div class="flex gap-3 pt-2">
                <span class="text-brand-eco/60 font-bold">$</span>
                <span class="w-2 h-4 bg-brand-eco/60 animate-blink"></span>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-blink {
        animation: blink 1s step-end infinite;
    }
    @keyframes blink {
        from, to { opacity: 1; }
        50% { opacity: 0; }
    }
    
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>





