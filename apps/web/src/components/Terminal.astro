<div class="max-w-2xl mx-auto mb-12 animate-float">
    <div
        class="glass rounded-2xl overflow-hidden shadow-2xl shadow-indigo-500/20 border-white/10 group text-left font-mono"
    >
        <div
            class="flex items-center gap-1.5 px-5 h-11 border-b border-white/5 bg-white/5"
        >
            <div class="flex gap-1.5">
                <div
                    class="w-3 h-3 rounded-full bg-[#FF5F56] shadow-inner shadow-black/20"
                >
                </div>
                <div
                    class="w-3 h-3 rounded-full bg-[#FFBD2E] shadow-inner shadow-black/20"
                >
                </div>
                <div
                    class="w-3 h-3 rounded-full bg-[#27C93F] shadow-inner shadow-black/20"
                >
                </div>
            </div>
            <div
                class="flex-1 text-[11px] text-center text-white/30 font-mono tracking-widest uppercase"
            >
                Terminal
            </div>
        </div>
        <div class="p-6 text-sm leading-relaxed h-[240px] overflow-hidden">
            <!-- Step 1: Install CLI -->
            <div class="flex gap-3 terminal-step-1">
                <span class="text-indigo-400 font-bold">➜</span>
                <span class="text-purple-400">~</span>
                <span class="terminal-type-1 text-white/90"
                    >npm install -g skild</span
                >
            </div>
            <div
                class="mt-2 text-emerald-400 text-xs opacity-0 terminal-done-1"
            >
                ✔ skild installed globally
            </div>

            <!-- Step 2: Install Skillset -->
            <div class="mt-4 flex gap-3 opacity-0 terminal-step-2">
                <span class="text-indigo-400 font-bold">➜</span>
                <span class="text-purple-400">~</span>
                <span class="terminal-type-2 text-white/90"
                    >skild install superpowers</span
                >
            </div>
            <div
                class="mt-2 flex items-center gap-3 text-white/40 animate-pulse opacity-0 terminal-loading"
            >
                <span
                    class="inline-block w-4 h-4 border-2 border-indigo-500/30 border-t-indigo-500 rounded-full animate-spin"
                ></span>
                <span>Installing skillset...</span>
            </div>

            <!-- Success output -->
            <div class="mt-2 opacity-0 terminal-success">
                <div class="flex gap-2 text-emerald-400">
                    <span>✔</span>
                    <span
                        >Installed <span class="text-white font-bold"
                            >14 skills</span
                        > to <span class="text-white/60">~/.claude/skills</span
                        ></span
                    >
                </div>
                <div class="mt-2 ml-6 text-xs text-white/30 space-y-0.5">
                    <p class="flex items-center gap-2">
                        <span class="text-emerald-400/60">✓</span>
                        <span>systematic-debugging</span>
                    </p>
                    <p class="flex items-center gap-2">
                        <span class="text-emerald-400/60">✓</span>
                        <span>test-driven-development</span>
                    </p>
                    <p class="flex items-center gap-2">
                        <span class="text-emerald-400/60">✓</span>
                        <span>code-review</span>
                    </p>
                    <p class="text-white/20">... +11 more</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Timeline:
    // 0s - start typing npm install
    // 1.5s - npm install done, show success
    // 2s - show step 2, start typing skild install
    // 3.5s - show loading
    // 4.5s - show success output

    // Step 1 done
    setTimeout(() => {
        document
            .querySelector(".terminal-done-1")
            ?.classList.remove("opacity-0");
        document
            .querySelector(".terminal-done-1")
            ?.classList.add("animate-fade-in");
    }, 1500);

    // Step 2 appears
    setTimeout(() => {
        document
            .querySelector(".terminal-step-2")
            ?.classList.remove("opacity-0");
        document
            .querySelector(".terminal-step-2")
            ?.classList.add("animate-fade-in");
    }, 2000);

    // Loading appears
    setTimeout(() => {
        document
            .querySelector(".terminal-loading")
            ?.classList.remove("opacity-0");
    }, 3500);

    // Success appears
    setTimeout(() => {
        document.querySelector(".terminal-loading")?.classList.add("hidden");
        document
            .querySelector(".terminal-success")
            ?.classList.remove("opacity-0");
        document
            .querySelector(".terminal-success")
            ?.classList.add("animate-fade-in");
    }, 4500);
</script>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(6px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in {
        animation: fade-in 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .terminal-type-1 {
        display: inline-block;
        width: 0;
        overflow: hidden;
        white-space: nowrap;
        animation: typing-1 1.2s steps(22, end) forwards;
    }

    .terminal-type-2 {
        display: inline-block;
        width: 0;
        overflow: hidden;
        white-space: nowrap;
        animation: typing-2 1.2s steps(24, end) 2s forwards;
    }

    @keyframes typing-1 {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    @keyframes typing-2 {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }
</style>
